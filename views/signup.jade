doctype html
html(lang='en')
  head
    title Sign Up for Admiral
    link(rel='shortcut icon', type='image/x-icon', href='media/favicon.png')
    link(rel="stylesheet", href="/stylesheets/bootstrap.css", type="text/css", media="screen")
    link(rel="stylesheet", href="/stylesheets/signup.css", type="text/css", media="screen")

  body
    #app
      #nav
        a(href='/') Admiral
      #background
        #title
          | Sign Up
        #userSelector
          #selectorcontainer
            button#userbtn.btn.btn-primary(type='button' @click='userType = "user"' v-bind:class="{'active': userType=='user' }") User
            button#sitebtn.btn.btn-primary(type='button' @click='userType = "site"' v-bind:class="{'active': userType=='site' }") Site Admin
            button#adbtn.btn.btn-primary(type='button' @click='userType = "advertiser"' v-bind:class="{'active': userType=='advertiser' }") Advertiser
        form(v-if='userType == "user"', name="user_signup", method="post", action="/signup")
          #forms
            .form-group
              label(for="username", style="color: white;") Email (This will be your username)
              input.form-control(type='email', placeholder="Email", name="username")
            .form-group
              label(for="password", style="color: white;") Password
              input.form-control(type='password', name="password")
          #buttons
            #user.signup
              button.btn.btn-info.btn-lg.btn-block(type="submit") Sign Up
            #user.cancel
              a(href="/")
                button.btn.btn-danger.btn-lg.btn-block(type="button") Cancel
        form(v-if='userType == "site"', name="site_signup", method="post", action="/signup")
          #forms
            .form-group
              label(for="username", style="color: white;") Email (This will be your username)
              input.form-control(type="email", placeholder="Email", name="username")
            .form-group
              label(for="password", style="color: white;") Password
              input.form-control(type='password', name="password")
            .form-group
              label(for="text", style="color: white;") Site Address
              input.form-control(type='text', placeholder="Site Address", name="address")
            .form-group
              label(for="text", style="color: white;") Billing Code
              input.form-control(type='text', placeholder="Billing Code", name="billing")
          #buttons
            #site.signup
              button.btn.btn-info.btn-lg.btn-block(type="submit") Sign Up
            #site.cancel
              a(href="/")
                button.btn.btn-danger.btn-lg.btn-block(type="button") Cancel
        form(v-if='userType == "advertiser"', name="ad_signup", method="post", action="signup")
          #forms
            .form-group
              label(for="username", style="color: white;") Email (This will be your username)
              input.form-control(type='email', placeholder="Email", name="username")
            .form-group
              label(for="password", style="color: white;") Password
              input.form-control(type='password', name="password")
            .form-group
              label(for="text", style="color: white;") Billing Code
              input.form-control(type='text', placeholder="Billing Code", name="billing")
          #buttons
            #ad.signup
              button.btn.btn-info.btn-lg.btn-block(type="submit") Sign Up
            #ad.cancel
              a(href="/")
                button.btn.btn-danger.btn-lg.btn-block(type="button") Cancel


    script(src="/javascripts/vue.js")
    script(src="/javascripts/gatevue.js")
